<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="edu.ntut.user.myhw3.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="490dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtSex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sex"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/SexGrp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/MaleBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/FemaleBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Female" />

            </RadioGroup>

            <TextView
                android:id="@+id/txtAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/age"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/AgeSpin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/sex_list"
                android:spinnerMode="dialog"/>

            <CheckBox
                android:id="@+id/music"
                android:layout_width="1073741824dp"
                android:layout_height="1073741558dp"
                android:text="音樂" />

            <CheckBox
                android:id="@+id/sing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="唱歌" />

            <CheckBox
                android:id="@+id/dance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="跳舞" />

            <CheckBox
                android:id="@+id/travel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="旅行" />

            <CheckBox
                android:id="@+id/reading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="閱讀" />

            <CheckBox
                android:id="@+id/writing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="寫作" />

            <CheckBox
                android:id="@+id/climbing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="爬山" />

            <CheckBox
                android:id="@+id/swim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="游泳" />

            <CheckBox
                android:id="@+id/eating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="美食" />

            <CheckBox
                android:id="@+id/drawing"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text="繪畫" />

            <TextView
                android:id="@+id/txtSug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/suggestion"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtInterest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnOK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btnOK"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>